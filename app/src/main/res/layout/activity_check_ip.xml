<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".check_ip">

    <TextView
        android:id="@+id/ipv4TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="262dp"
        android:text="IPv4 Address: "
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ipv6TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ipv4TextView"
        android:layout_alignStart="@id/ipv4TextView"
        android:layout_marginStart="2dp"
        android:layout_marginTop="43dp"
        android:text="IPv6 Address: "
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>
